<?//Valdiate Userif($_REQUEST['id'] || ($_REQUEST['edid'] && isAdmin())) redirect('/ad-'.$_REQUEST['id'].$_REQUEST['default'].'');if($_REQUEST['edid'] || $_REQUEST['msg']) setPageConst('simplified',true); //Hide ads on "first see" pages, because we don't want google to be confused by the url//Load Ad$ad = $_SERVER['db']->getRow("SELECT * FROM classifieds_ads a, classifieds_types t, classifieds_prices pWHERE a.type = t.typeId AND a.priceType = p.priceId AND a.id = '{$_REQUEST['default']}'");if(!$ad) redirect($_SESSION['lastPage'],'The ad you tried to view could not be found.<br />Please try searching for more items below:');$_SERVER['db']->execute('UPDATE classifieds_ads SET view = '.($ad['view']+1).' WHERE id = '.$ad['id'].'');//Format Ad$ad = func(_fnc.'adhandling','filterSafarriAd',$ad);if($ad['storeid']) {	$temp = $_SERVER['db']->getRow('SELECT link, name FROM stores where id = '.$ad['storeid']);	$ad['storeName'] = $temp['name'];	$ad['storeLink'] = (strpos($item['link'],'.') ? 'http://'.$temp['link'] : 'http://'.$temp['link'].'.'.SAFARRI);}if($ad['anonymous_user_details']) $seller = unserialize($ad['anonymous_user_details']);else $seller = renderUser($ad['usid']);$ad['pictureCount'] = 0;while ($ad['pictureCount'] < 16) {	if(!$ad['pic'.$ad['pictureCount']]) break;	//$ad['imageArr'] .= ',\''.substr($ad['pic'.$ad['pictureCount']],6).'\'';	if($ad['id'] > 573 || $ad['id'] == 569)	$ad['picList'] .= '<a href="'.str_replace('.jpg','-orig.jpg',$ad['pic'.$ad['pictureCount']]).'" rel="lightbox:adimg"><img id="adpic'.$ad['pictureCount'].'" src="'.$ad['pic'.$ad['pictureCount']].'" /></a>';	else				$ad['picList'] .= '<img id="adpic'.$ad['pictureCount'].'" src="'.$ad['pic'.$ad['pictureCount']].'" />';	$ad['thumbList']	.= '<li><a href="#adpic'.$ad['pictureCount'].'"><img src="'.$ad[$temp2] = func(_mod.'imageuploader','getThumbnailImageName',$ad['pic'.$ad['pictureCount']]).'" /></a></li>';	$ad['pictureCount']++;}if($ad['imageArr']) $ad['imageArr'] = substr($ad['imageArr'],1);//Initialize Page TemplatesetPageTpl('ad');setPageConsts(array('ad'=>$ad,'seller'=>$seller),'ad');?>