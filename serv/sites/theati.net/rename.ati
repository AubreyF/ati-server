<?set_time_limit(9999);renameRecursive('/sites');function renameRecursive($path='') {	if (!is_dir(_root.$path)) die("no directory: ".$path);	$resdir = @opendir (_root.$path) or die("Error reading ".$path);   		while (($entry=readdir($resdir))!== false) {	           if($entry == 'includes') {		   } else if ( is_dir(_root.$path."/".$entry)=="dir" ) { //if it's a directory...		   		if ($entry!="." and $entry!="..") {//do not use ./ or ../                       renameRecursive($path."/".$entry);  // Call himself using the same result array                 }           } else {// if it is not a dir, read the filenames		   		 $ext = substr($entry, -3);                 if ($ext == 'php') {				 	rename(_root.$path."/".$entry,_root.$path."/".substr($entry,0,(strlen($entry) - 3)).'ati');				}		   }     }	      closedir($resdir);}?>