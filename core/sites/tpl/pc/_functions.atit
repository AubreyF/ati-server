if(!function_exists('linkBar')) {
function linkBar($funcs) {
	$sep = '';
	
	foreach ($funcs as $key=>$val) {
		if(!$val) $return .= $sep.'<span class="highlighted">'.$key.'</span>';
		else $return .= $sep.'<a href="'.$val.'">'.$key.'</a>';
		$sep = ' - ';
	}
	return '<div class="lbar">'.$return.'</div>';
}
}

