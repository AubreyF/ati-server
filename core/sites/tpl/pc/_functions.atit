	</div>
	';
}
}

function columns() {
	$funcs = func_get_args();
	$xtra = array_shift($funcs);
		
	foreach ($funcs as $val) if($val) $return .= '<td class="column">'.$val.'</td>';
	
	return '<table class="columns '.$xtra.'">'.$return.'</table>';
}

