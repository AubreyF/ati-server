<?setPagePref('deadEndPage','true');if($_REQUEST['location']) {	$location = func(_mod.'location','getLocation',$_REQUEST['location']);	if($location) {		$_SESSION['userLatitude'] =  $location['latitude'];		$_SESSION['userLongitude']=  $location['longitude'];		$_SESSION['userTimezone'] =  $location['timezone'];		$_SESSION['userDST']      =  $location['dst'];		$_SESSION['userCity']     =  $location['city'];		$_SESSION['userState']    =  $location['state'];		$_SESSION['userZip']  	  =  $location['zip'];				redirect($_SESSION['lastPage'],'Your location was successfully updated!');	}		redirect($_SESSION['lastPage'],'The location "'.$_REQUEST['location'].'" could not be located.');}$_SESSION['userLatitude'] =  '';$_SESSION['userLongitude']=  '';$_SESSION['userTimezone'] =  '';$_SESSION['userDST']      =  '';$_SESSION['userCity']     =  '';$_SESSION['userState']    =  '';$_SESSION['userZip']  	  =  '';redirect($_SESSION['lastPage'],'Your location has successfully been removed!');?>