<?setPagePref('deadEndPage',true);setPageConst('simplified',true);//******** Initialize customizable variables through ATIServer modular interface **********$vars['friendsname'] = $_POST['friendsname'];$vars['username'] = $_SESSION['userRealName'].$_POST['yourname'];if(!$vars['friendsname']) $vars['friendsname'] = '{Friend\'s Name}';if(!$vars['username']) $vars['username'] = '{Your Name}';$vars['title'] = 'Invite your friends!';$vars['message'] = 	"Your friend, {$vars['username']}, thought you would be interested in the ATI Network: a collection of websites designed to help You get more done online!\n".	"You can visit the ATI Network's homepage at:\nhttp://theati.net\n\n".	"Below is a message from {$vars['username']}:";if(file_exists(_site.'/_modules/_user/invite.atii')) include _site.'/_modules/_user/invite.atii';//************************************ Generate Page ***************************setPageConst('title',$vars['title']);setPageConst('bct','<a href="/index">Home</a> > '.$vars['title']);if($_POST['submitted'] == true) {	if(!$_POST['youremail']) 		$_POST['youremail'] = 'inviteafriend@'.$_SERVER['HTTP_HOST_TOP'];	if(!isLoggedIn() && !$_POST['yourname']) $errors .= '<li>Your must specify your name!</li>';	//if(!$_POST['yourmessage']) 		$errors .= '<li>Your must specify a message for your friend!</li>';	if(!$_POST['friendsemail'])		$errors .= '<li>Your must specify your friend\'s email address!</li>';	if(!$_POST['friendsname'])		$errors .= '<li>Please specify a name for your friend</li>';		if($errors) {		$message = '<div class="ebox"><h4>You forgot to supply some information: <ul>'.$errors.'</ul></h4></div>';	}	else {		 mail(			 $_POST['friendsemail'], 'An invitation from '.$_SESSION['userName'].$_POST['yourname'],			 $vars['message']."\n\n".$_POST['yourmessage'].($_POST['yourmessage'] ? "\n\n-" : '-').$vars['username'], "From: ".($_SESSION['userEmail'] ? $_SESSION['userEmail'] : 'invite@safarri.com')."\nOrigin: {$_SERVER['REMOTE_ADDR']}"			 );		 		$message .='<div class="nbox">Your email was sent to '.$vars['friendsname'].' successfully!<br /><em>You can email more friends if you\'d like.</em></div>';				//Initialise request variables for the next friend they want to bug! :-)		$_POST['friendsemail'] = '';		$_POST['friendsname'] = '';	}}if(!isLoggedIn()) {	$extraFormDetails = '	<tr>	  <td class="lcol">Your Name:<br />	  <td class="rcol"><input class="input" name="yourname" type="text" id="yourname" value="'.$_POST['yourname'].'" size="50" width="70" />	  </td>	</tr>';}if(!$message) $message = '<div class="mbox boldText">'.$vars['text'].'</div>';setPageBlock('blockFancy','Invite your friends!',	$message	.'	<form enctype="multipart/form-data"  method="post">	  <table class="outer">		'.$extraFormDetails.'		<tr>		  <td class="lcol">Friend\'s Email:</td>		  <td class="rcol"><input class="input" name="friendsemail" type="text" id="friendsemail" value="'.$_POST['friendsemail'].'" size="50" width="70" /></td>		</tr>		<tr>		  <td class="lcol">Friend\'s Name:</td>		  <td class="rcol"><input class="input" name="friendsname" type="text" id="friendsname" value="'.$_POST['friendsname'].'" size="50" width="70" />		  </td>		</tr>		<tr>		  <td class="lcol">Default Message:</td>		  <td class="rcol">			<div class="desc">'.nl2br($vars['message']).'</div>		  </td>		</tr>		<tr>		  <td class="lcol">Extra Message:</td>		  <td class="rcol">			<textarea class="input" name="yourmessage" id="yourmessage" style="height:50px;">'.$_POST['yourmessage'].'</textarea>		  </td>		</tr>	  </table>	  <br />	  <input name="submitted" type="hidden" id="submitted" value="true" />	  <div class="boldBorder"><input name="Submit" type="submit" value="Tell My Friend!" class="bold" /></div>	</form>');?>